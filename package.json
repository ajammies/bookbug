{
  "name": "bookbug",
  "version": "0.1.0",
  "description": "CLI for generating children's picture books with AI",
  "type": "module",
  "main": "dist/core/index.js",
  "bin": {
    "bookbug": "dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx src/cli/index.ts",
    "build": "tsc",
    "start": "node dist/cli/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.0.0",
    "@inquirer/prompts": "^7.0.0",
    "ai": "^4.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dotenv": "^17.2.3",
    "ora": "^8.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.14",
    "tsx": "^4.0.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.14"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
